<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TodoListMauiApp.ViewModels"
             x:Class="TodoListMauiApp.TodoPage"
             Title="Todo">
    <StackLayout>
        <Label Text="{Binding Todos.Count, StringFormat='Todos {0}'}"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               Margin="5,10"/>

        <BoxView Margin="5" HeightRequest="1" BackgroundColor="LightGray" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />

        <ListView ItemsSource="{Binding Todos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Title}" VerticalOptions="Center" FlexLayout.Grow="1"/>
                            <!--<Button Text="âŒ" Command="{Binding Source={RelativeSource AncestorType={x:Type local:TodoViewModel}}, Path=RemoveTodoCommand}" CommandParameter="{Binding}" VerticalOptions="Center"/>-->
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <Entry Margin="5,10" Text="{Binding NewTodo}" />
        <Button Margin="5,10" Text="Add Todo" Command="{Binding AddNewTodoCommand}" />

        <Label 
            Text="{Binding ConnectionIcon, StringFormat='Internet Status: {0}'}" 
            FontSize="Small" 
            Margin="20"
            HorizontalOptions="Center" 
            VerticalOptions="Start" />

        
    </StackLayout>

    
</ContentPage>